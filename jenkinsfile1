pipeline {
  agent any
  stages {
    stage('Docker Build') {
    	agent any
      steps {
      	sh 'docker build -t ram3 .'
      }
    }
        stage('Scan') {
            steps {

                // Scan all vuln levels
                sh 'mkdir -p reports'
                sh 'trivy image --scanners vuln --format template --template @./html.tpl -o report.html ram3'
            }
           }
  }
}
