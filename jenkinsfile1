pipeline {
  agent any
  stages {
    stage('Docker Build') {
    	agent any
      steps {
      	sh 'docker build -t ram4 .'
      }
    }
        stage('Scan') {
            steps {

                // Scan all vuln levels
                sh 'mkdir -p reports'
                sh 'trivy image --format template --template "@/usr/share/trivy/templates/html.tpl" -o report.html ram4'
            }
           }
  }
}
